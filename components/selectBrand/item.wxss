@import '../../style/common.wxss';
.container {
  height: 90vh;
  position: relative;
  background-color: #f3f3f3;
}
.tablebox{
  position: absolute;
  top:0;
  bottom:120rpx;
  width:100%;
}
.radio-group {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center; 
  flex-wrap: wrap;
}
.foot {
  height: 120rpx;
  padding: 20rpx 30rpx;
  box-shadow:  0 0 4rpx 4rpx #ddd; 
}
.foot button {
  border-radius: 40rpx;
  background-color: #ff6600;
  color: #ffffff;
  height: 80rpx;
  line-height: 80rpx;
  font-size:28rpx;
}
.radio.active {
  color: #ff6600;
}