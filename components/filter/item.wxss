.filter-wrap{
  height: 88vh;
  width: 100%;
  overflow: hidden;
  background-color: #f0f0f0;
}

.filter-data-list{
  position: absolute;
  top:0;
  bottom: 118rpx;
  background-color: #fff;
  width: 100%;
}

.action-box{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  background-color: #fff;
  padding: 15rpx;
  box-sizing: border-box;
  display: flex;
}

.action-box view{
  width: 50%;
  padding:0rpx 15rpx;
  box-sizing: border-box;
}

.action-box view button{
  width: 100%;
  height: 68rpx;
  line-height: 64rpx;
  text-align: center;
  font-size: 32rpx;
  letter-spacing: 5rpx;
  border: 1rpx solid #ff6600;
  border-radius: 68rpx;
  box-sizing: border-box;
}

.action-box view button.reset{
color:#ff6600;
background-color: #fff;
}

.action-box view button.submit{
color:#fff;
background-color: #ff6600;
}

.panel{
  padding: 30rpx;
  border-bottom: 1rpx solid #dedede;
}

.panel-header{
  height: 50rpx;
  display: flex;
  justify-content: space-between;
  line-height: 50rpx;
}

.panel-header .down{
  width: 50rpx;
  height: 50rpx;
  padding: 10rpx;
}

.panel-header image{
width: 50rpx;
height: 50rpx;
vertical-align: top;
transition: all cubic-bezier(0.215, 0.610, 0.355, 1) .4s;
}

.panel-header .down.open image{
transform: rotate(180deg);
}

.panel-header text{
  font-size: 26rpx;
  color: #333;
  font-weight: 600;
}

.panel-body{
  height: 90rpx;
  transition: all cubic-bezier(0.215, 0.610, 0.355, 1) .4s;
  overflow: hidden;
}

.panel-body.open{
  height: auto;
}

.panel-body .list{
  display: flex;
  flex-wrap: wrap;
}

.panel-body .list .item{
  display: inline-block;
  padding: 0 15rpx;
  height: 64rpx;
  line-height: 64rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  color:#666;
  text-align: center;
  border-radius: 6rpx;
  margin-top: 26rpx;
  word-break: break-all;
  margin-right: 15rpx;
  border:1rpx solid #fff;
}

.panel-body .list .item.on{
  color:#ff6600;
  border:1rpx solid #ff6600;
}

.panel-body .list .price{
  display: flex;
  width: 345rpx;
  justify-content: space-between;
  margin-left: 30rpx;
  margin-top: 26rpx;
}

.panel-body .list .price input{
  width: 150rpx;
  height: 64rpx;
  color:#666;
  font-size:26rpx;
  border: 1rpx solid #999;
  border-radius: 6rpx;
  box-sizing: border-box;
  padding: 0 10rpx;
  text-align: center;
}

.panel-body .list .price text{
  margin: 0 15rpx;
  flex:1;
  color:#666;
  line-height: 64rpx;
  overflow: hidden;
}

.panel-area .panel-header{
  margin-bottom: 20rpx;
  justify-content: flex-start;
}

.panel-area .panel-body{
  min-height: 140rpx;
  height: auto;
}

.panel-area .panel-header text{
  margin-right: 20rpx;
}

checkbox-group{
  margin-top: -2rpx;
}

.text-area{
  padding: 10rpx;
  color:#666;
  font-size: 24rpx;
  background-color: #ebebeb;
  border-radius: 10rpx;
  width: 100%;
  min-height: 140rpx;
  box-sizing: border-box;
  line-height: 30rpx;
  overflow: hidden;
  white-space: normal;
}

.area-content{
  white-space: normal;
  word-break:break-all;
}

.placecss{
  color:#666;
  font-size: 22rpx;
}
