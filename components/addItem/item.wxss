.modal{
  position: fixed;
  top:0;
  bottom: 0;
  width: 100%;
  background-color: rgba(0,0,0,0.4);
  display: flex;
  justify-content: center;
  align-content: center;
  align-items: center;
}

.modal-wrap{
  width: 580rpx;
  height: 520rpx;
  overflow: hidden;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 0 5rpx #5e5e5e;
  padding-top: 10rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.modal-head{
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 30rpx;
  color:#333;
  font-weight: 600;
}

.modal-body{
  padding: 20rpx 30rpx;
}

.form-group{
  display: flex;
  margin-bottom: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.form-group text{
  width: 80rpx;
  display: block;
  text-align: right;
  white-space: nowrap;
  margin-right: 25rpx;
  color:#333;
  font-size: 24rpx;
  font-weight: bold;
}

.form-group .picker,.form-group .inputbox{
  color:#999;
  font-size:22rpx;
  width: 380rpx;
  overflow: hidden;
  height: 60rpx;
  border: 1rpx solid #dedede;
  border-radius: 6rpx;
}

.form-group .inputbox input{
  width: 380rpx;
  padding: 0 10rpx;
  line-height: 60rpx;
  box-sizing: border-box;
}

.form-group .picker{
display: flex;
justify-content: space-between;
align-content: center;
align-items: center;
padding: 0 10rpx;
line-height: 60rpx;
}

.placecss{
  color:#999;
  font-size: 22rpx;
}

.form-group .picker image{
  width: 30rpx;
  height: 30rpx;
}

.modal-footer{
height: 86rpx;
display: flex;
align-content: center;
align-items: center;
font-size:30rpx;
color:#999;
border-top:1rpx solid #dedede;
}

.modal-footer .btn{
  flex:1;
  height: 100%;
 display: flex;
 align-content: center;
 justify-content: center;
 align-items: center;
}

.modal-footer .btn.submit{
  border-left:1rpx solid #dedede;
  color:#ff6600;
}