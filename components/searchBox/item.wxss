/* components/searchBox/searchBox.wxss */
.search-wrap{
  height: 88rpx;
  background-color: #ff6600;
  overflow: hidden;
  width: 100%;
  padding: 15rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}

.search{
  /* width: 620rpx; */
  height: 58rpx;
  overflow: hidden;
  display: flex;
  flex:1;
}

.search .search-box{
  background-color: #fff;
  border-radius: 58rpx;
  overflow: hidden;
  flex:1;
  height: 100%;
  display: flex;
  padding: 0 20rpx 0 10rpx;
  box-sizing: border-box;
  justify-content: space-between;
}

.search .search-box image{
  width: 40rpx;
  height: 40rpx;
  margin: 9rpx;
}

.search .search-box input,.search .search-box .search-input{
  flex:1;
  color:#999;
  font-size: 24rpx;
  line-height: 58rpx;
  height: 58rpx;
}

.search-wrap .btn{
width: 120rpx;
line-height: 58rpx;
font-size: 30rpx;
color:#fff;
letter-spacing: 10rpx;
text-align: right;
padding-right: 5rpx;
}

.placecss{
  color:#999;
  font-size: 24rpx;
}

.sys{
  width:58rpx; 
  height: 58rpx;
  padding: 9rpx;
  box-sizing: border-box;
  text-align: center;
}

.sys image{
  width: 40rpx;
  height: 40rpx;
}