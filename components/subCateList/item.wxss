.cate-header{
  height: 88rpx;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
}
.main-cate{
  flex:1;
  display: flex;
}
.cate-header.main-border{
border-bottom: 1rpx solid #dedede;
}
.main-cate .item{
width: 20%;
padding:  0 5rpx;
height: 88rpx;
line-height: 88rpx;
text-align: center;  
white-space: nowrap;
overflow: hidden;
text-overflow: ellipsis;
font-size:26rpx;
color:#666;
box-sizing: border-box;
}
.main-cate .item.on text{
  color:#ff6600;
  border-bottom:5rpx solid #ff6600;
  padding-bottom: 15rpx;
}
.main-cate-scroll{
  width: 600rpx;
}
.main-cate .cate-list{
  width: 100%;
  white-space:nowrap;
}
.main-cate .cate-list .item{
  display: inline-block; 
  padding: 0 20rpx;
  box-sizing: border-box;
  width: auto;
  white-space: nowrap;
  overflow: hidden;
}
.more{
  width: 88rpx;
  height: 88rpx;
  margin-left:20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: -8rpx 0 10rpx #dedede;
}

.more image{
  width: 30rpx;
  height: 30rpx;
  transition: all cubic-bezier(0.23, 1, 0.320, 1) .5s;
}

.more.open image{
  transform:rotate(180deg);
}

.more.filter{
   width: 150rpx; 
  color:#ff6600;
  font-size: 26rpx;
}

.more.filter image{
  margin-right: 10rpx;
}

.sub-cate-list{
  display: flex;
  padding: 10rpx;
  flex-wrap: wrap;
}

.cate-item{
  padding: 10rpx;
  width: 25%;
  box-sizing: border-box;
}

.cate-item .item{
  display: block;
  width: 100%;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  background-color:#dedede;
  color:#666;
  font-size:24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  border-radius: 48rpx;
  transition: all cubic-bezier(0.165, 0.84, 0.44, 1) .4s;
}

.cate-item .item.on{
  background-color:#ff6600;
  color:#fff;
}

.action-sheet{
  position: absolute;
  top:86rpx;
  width: 100%;
  bottom: 0;
  border-top:1rpx solid #f3f3f3;
  transition: all ease-in-out .3s;
}

.maskbg{
  position: absolute;
  top:0rpx;
  bottom:0;
  background-color: rgba(0,0,0,.45);
  width: 100%;
  z-index: 2;
}

.moreList{
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
  align-items: stretch;
  align-content: stretch;
  z-index: 5;
  position: absolute;
  top:0;
  width: 100%;
}

.moreList .item{
  margin: 10rpx 5rpx;
  font-size: 26rpx;
  line-height: 60rpx;
  text-align: center;
  padding: 0 20rpx;
  /* width: 16.6666%; */
  box-sizing: border-box;
  color:#666;
}

.moreList .item.on text{
  color:#ff6600;
  border-bottom:5rpx solid #ff6600;
  padding-bottom: 12rpx;
}