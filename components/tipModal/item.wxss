/* 弹窗框 */
.modal-wrap{
  position: fixed;
  top:0;
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: center;
}

.modal-wrap .mask{
  width: 100%;
  height: 100%;
  position: absolute;
  background-color: rgba(0,0,0,.5);
}

.modal-wrap .modal{
  width:80%;
  background-color: #ffffff;
  border-radius: 20rpx;
  box-sizing: border-box;
  position: relative;
  z-index: 5;
}

.modal .modal-content{
  padding: 30rpx;
  min-height: 180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: center;
  justify-content: center;
  box-sizing: border-box;
  color:#333;
  font-size:30rpx;
}

.modal .modal-content text{
  flex:1;
}

.modal .modal-footer{
  border-top:1rpx solid #d1d1d1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  color:#ff6600;
}