/* pages/list/index.wxss */
.containers{
  height: 100%;
}
.list-fixed{
  position: fixed;
  width: 100%;
  height: 178rpx;
  overflow: hidden;
  background-color: #fff;
}

.list-header{
  height: 90rpx;
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #dedede;
  overflow: hidden;
  position: relative;
}

.toggle{
  width: 360rpx;
  height: 60rpx;
  border-radius: 60rpx;
  background-color: #dedede;
  overflow: hidden;
  position: absolute;
  left:50%;
  top:50%;
  margin-left: -180rpx;
  margin-top: -30rpx;
}

.toggle .tabsbox{
  padding: 5rpx;
  display: flex;
  position: absolute;
  z-index: 2;
}

.toggle .tab{
  width: 175rpx;
  border-radius: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color:#333;
  font-size: 26rpx;
  flex:1;
  transition: color cubic-bezier(1, 0, 0, 1) .3s;
}

.toggle .tab.active{
  color:#fff;
}

.toggle .selected{
  width: 175rpx;
  border-radius: 50rpx;
  height: 50rpx;
  background-color: #ff6600;
  position: absolute;
  top:5rpx;
  left:5rpx;
  transition: left cubic-bezier(1, 0, 0, 1) .3s;
}

.filter{
  float: right;
  width: 120rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.filter image{
  width: 30rpx;
  height: 30rpx;
  margin: 30rpx 15rpx;
}

.filter text{
  color:#ff6600;
  font-size: 26rpx;
}

.cate-container{
position: absolute;
top:178rpx;
bottom: 0;
background-color: #f3f3f3;
}

.loaded{
  color:#999999;
  font-size:24rpx;
  line-height: 40rpx;
  text-align: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}


