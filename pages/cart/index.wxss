/*  重写 checkbox 样式  */
/* 未选中的 背景样式 */
checkbox .wx-checkbox-input{
   border-radius: 50%;/* 圆角 */
   width: 30rpx; /* 背景的宽 */
   height: 30rpx; /* 背景的高 */
}
/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
   border: 1rpx solid #ff6600;
   background: #ff6600;
}
/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
   border-radius: 50%;/* 圆角 */
   width: 30rpx;/* 选中后对勾大小，不要超过背景的尺寸 */
   height: 30rpx;/* 选中后对勾大小，不要超过背景的尺寸 */
   line-height: 30rpx;
   text-align: center;
   font-size:30rpx; /* 对勾大小 30rpx */
   color:#fff; /* 对勾颜色 白色 */
   background: transparent;
   transform:translate(-50%, -50%) scale(0.75);
   -webkit-transform:translate(-50%, -50%) scale(0.75);
}

.cart-wrapper{
  padding: 20rpx;
  padding-bottom: 88rpx;
}

.cart-panel{
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.cart-panel .cart-header{
  height: 60rpx;
  border-bottom: 1rpx solid #dedede;
  display: flex;
  justify-content: space-between;
  padding: 0 10rpx;
}

.cart-panel .cart-header label{
  font-size: 24rpx;
  color:#666;
  height: 60rpx;
  display: flex;
  align-content: center;
  align-items: center;
  padding-left: 10rpx;
}

label checkbox{
  margin-right: 10rpx;
}

.cart-panel .cart-header .store-info,.cart-panel .cart-header .dellbox{
  height: 60rpx;
  display: flex;
  align-content: center;
  align-items: center;
}

.cart-panel .cart-header .dellbox{
  width: 60rpx;
  justify-content: center;
}

.cart-body .item{
  display: flex;
  border-bottom: 1rpx solid #dedede;
}

.cart-body .item:last-child{
  border-bottom:none;
}

.cart-body .item label{
  width: 65rpx;
  display: flex;
  align-content: center;
  align-items: center;
  justify-content: flex-end;
  padding-left: 10rpx;
}

.cart-body .item .content{
  flex:1;
  overflow: hidden;
}

.cart-action{
  display: flex;
  justify-content: space-between;
  padding: 0;
}

.cart-action .selectbox{
  display: flex;
  width: 240rpx;
  height: 96rpx;
}

.cart-action .selectbox label{
  font-size:30rpx;
  color:#999999;
  height: 96rpx;
  display: flex;
  align-content: center;
  align-items: center;
  padding-left: 20rpx;
}

.cart-action .selectbox .dell{
  width: 80rpx;
  height: 96rpx;
  display: flex;
  align-content: center;
  align-items: center;
  justify-content: center;
  margin-left: 10rpx;
}

.cart-action .cartNum{
  display: flex;
  flex:1;
  justify-content: flex-end;
  align-content: center;
  align-items: center;
  padding-right: 20rpx;
}

.cart-action .cartNum .numbox{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 68rpx;
}

.cart-action .cartNum .numbox .total{
  font-size: 30rpx;
  line-height: 30rpx;
  color:#d32f2e;
  font-weight: bold;
}

.cart-action .cartNum .numbox .tip{
  font-size:24rpx;
  color:#999999;
}

.cart-action .cartNum .btn{
  width: 260rpx;
  height: 68rpx;
  margin-left: 20rpx;
  margin-right: 0rpx;
}