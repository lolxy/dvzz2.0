/* pages/mine/suite/index.wxss */
view, image, text, scroll-view, radio-group {
  box-sizing: border-box;
}
image {
  width: 100%;
  height: 100%;
}
.container {
  width: 100%;
  height: 100%;
  padding: 20rpx;
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
  background-color: #f3f3f3;
}
.list {
  height: auto;
  margin-bottom: 20rpx;
  background-color: #ffffff;
  border-bottom: 2rpx solid #ddd;
  border-radius: 10rpx;
  overflow: hidden;
}
.list > view:first-child {
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #ddd;
}
.item_name {
  font-size: 30rpx;
  line-height: 1em;
  color: #333333;
}
.radio {
  font-size: 24rpx;
  line-height: 30rpx;
  color: #ff6600;
}
.radio radio {
  transform: scale(0.6);
}
.item_addr {
  padding: 33rpx 22rpx;
  font-size: 24rpx;
  line-height: 1em;
  color: #666666;
}

.nodata{
  padding: 20rpx;
  line-height: 120rpx;
  font-size: 26rpx;
  color:#666666;
  text-align: center;
}