/* pages/mine/login/index.wxss */
view, image, text,form ,input{
  box-sizing: border-box;
}
.container {
  width: 100%;
  height: 100%;
  padding: 240rpx 135rpx;
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  background-color: #f3f3f3;
}
image.logo {
  width: 450rpx!important;
  height: 285rpx!important;
  margin-bottom: 180rpx;
  box-sizing: border-box!important;
}
.btn {
  width: 480rpx;
  height: 68rpx;
  padding: 19rpx 0;
  border-radius: 34rpx;
  font-size: 32rpx;
  line-height: 1em;
  color: #ffffff;
  border: 1rpx solid transparent;
  text-align: center;
}
.btn + .btn {
  margin-top: 50rpx;
}
.btn_wxlogin {
  background-color: #8BC24A;
}
.btn_phlogin {
  background-color: #ff6600;
}

/*****  模态框  *****/
.modal {
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.5);
  top:0;
  left:0;
  z-index: 200;
  position: absolute;
}
.modal-fixd {
  width: 580rpx;
  height: 520rpx;
  margin: 288rpx auto 0;
  background-color: #ffffff;
  border-radius: 20rpx;
  overflow: hidden; 
  left: 0;
  right: 0;
  position: fixed;
}
.form_t {
  margin-top: 40rpx;
  font-size: 28rpx;
  line-height: 1em;
  color: #333333;
  text-align: center;
}
.form_c {
  height: 360rpx;
  padding: 40rpx 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
  border-bottom: 1rpx solid #ddd;
}
.form_grp + .form_grp {
  margin-top: 54rpx;
}
.form_grp {
  display: flex;
  flex-direction: row;
  justify-content: space-between!important;
  align-items: stretch;
}
.form_grp input {
  min-height: 60rpx;
  padding: 14rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  line-height: 30rpx!important;
  color: #333333;
  vertical-align: middle;
  border: 1rpx solid #999999;
}
.input_a {
  width: 100%;
}
.input_b {
  width: 220rpx;
  flex-basis: 220rpx;
}
.normal-btn {
  width: 140rpx;
  padding: 14rpx 0;
  font-size: 24rpx;
  line-height: 30rpx;
  color: #ff6600;
  text-align: center;
  border: 1rpx solid #ff6600;
  border-radius: 10rpx;
}
.identify {
  width: 140rpx;
  height: 60rpx;
  background-color: #ddd;
}
.form_f {
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: stretch;
}
.form_f > button {
  width: 50%;
  background-color: transparent;
  border-image: none;
  box-shadow: none;
  border-radius: 0;
  outline: none;
}
.form_f > button.active {
  color: #ff6600;
}