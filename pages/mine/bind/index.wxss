/* pages/mine/bind/index.wxss */
view, image, text,form ,input{
  box-sizing: border-box;
}
.container {
  width: 100%;
  height: 100%;
  padding: 240rpx 90rpx;
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  background-color: #f3f3f3;
}
image.logo {
  width: 106rpx!important;
  height: 129rpx!important;
  box-sizing: border-box!important;
}
.form_t {
  font-size: 32rpx;
  line-height: 1em;
  color: #333333;
  text-align: center;
}
.form_f {
  width: 100%;
  height: 300rpx;
}
.form_grp + .form_grp {
  margin-top: 54rpx;
}
.form_grp {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between!important;
  align-items: stretch;
}
.form_grp input {
  min-height: 80rpx;
  padding: 14rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  line-height: 30rpx!important;
  color: #333333;
  vertical-align: middle;
  border: 1rpx solid #999999;
}
.input_a {
  width: 100%;
}
.btn {
  width: 100%;
  padding: 12rpx;
  border-radius: 10rpx;
  background-color: #ff6600;
  color: #ffffff;
  text-align: center;
}
.btn.enable {
  background-color: #ccc!important;
}