/* pages/mine/drawing/index.wxss */
view, image, text, scroll-view, radio-group {
  box-sizing: border-box;
}
image {
  width: 100%;
  min-height: 100%;
}
.container {
  width: 100%;
  height: 100%;
  padding: 20rpx 0;
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
  background-color: #f3f3f3;
}
.cont_title {
  width: 100%;
  padding: 50rpx;
  text-align: center;
  font-size: 30rpx;
  line-height: 1em;
  color: #333333;
}
image.active {
  display: inline-block;
}
image{
  display: none;
}

.nodata{
  padding: 30rpx;
  height: 200rpx;
  display: flex;
  align-content: center;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  color:#666;
}