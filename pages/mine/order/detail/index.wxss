.comfirm-wrapper{
  padding-bottom: 98rpx;
}

.order-status{
  display: flex;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
}

.order-status .con,.order-status .pic{
  flex:1;
  width: 50%;
  display: flex;
}

.order-status .con{
  flex-direction: column;
  justify-content: space-between;
}

.order-status .con .status{
  font-size: 30rpx;
  color:#ff6600;
}

.order-status .con text{
  font-size: 24rpx;
  color:#666666;
}

.order-status .pic{
  align-content: center;
  align-items: center;
  justify-content: center;
}

.order-status .pic image{
  width: 136rpx;
  height: 76rpx;
}

.order-item{
  border-bottom:1rpx solid #dedede;
  background-color: #fff;
}

.order-item .order-info{
  height: 88rpx;
  display: flex;
  padding: 0 20rpx;
  font-size:30rpx;
  color:#666;
  justify-content: space-between;
  align-content: center;
  align-items: center;
  border-bottom: 1rpx solid #dedede;
}

.order-header,.order-footer{
  margin-bottom: 20rpx;
  background-color: #fff;
}

.order-footer{
  margin-top: 20rpx;
}

.dl{
  background-color: #fff;
  border-bottom: 1rpx solid #dedede;
  display: flex;
  align-content: center;
  align-items: center;
  padding: 20rpx;
}

.dl:last-child{
  border-bottom: none;
}

.dl .dt{
  font-size:30rpx;
  color:#333333;
  height: 48rpx;
  line-height: 48rpx;
  font-weight: bolder;
  margin-right: 10rpx;
}

.dl .dd{
  flex:1;
  font-size: 28rpx;
  color:#666;
}

.dl .youhuiquan{
  color:#999;
  text-align: right;
}

.dl .price{
  color:#f54337;
  text-align: right;
}

.libox{
  height: 88rpx;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #dedede;
  display: flex;
  justify-content: flex-end;
  align-content: center;
  align-items: center;
  font-size: 30rpx;
  font-weight: bolder;
  background-color: #fff;
}

.libox:last-child{
  border-bottom:none;
}

.libox text{
  color:#f54337;
}

.action-btnbox{
  height: 98rpx;
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  box-shadow: 5rpx 5rpx 5rpx #cccccc;
  display: flex;
  padding: 15rpx 5rpx;
  box-sizing: border-box; 
}

.action-btnbox .btn{
  margin:0 15rpx;
  flex:1;
  height: 68rpx;
  line-height: 65rpx;
  text-align: center;
  letter-spacing: 5rpx;
  font-size: 30rpx;
  color:#ff6600;
  border:1rpx solid #ff6600;
  border-radius: 68rpx;
}

.action-btnbox .btn.btn-warning{
  background-color: #ff6600;
  color:#fff;
}

/* 弹窗样式 */
.actionsheet{
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.5);
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  transition: all cubic-bezier(0.165, 0.84, 0.44, 1) .2s;
}
.paybox{
  margin: 20rpx;
  height: 520rpx;
  border-radius: 20rpx;
  background-color: #fff;
  position: relative;
  padding: 40rpx;
}

.paybox .tip{
  line-height: 90rpx;
  font-size: 30rpx;
  color:#000;
  text-align: center;
}

.paybox .price{
  color:#f54337;
  height: 135rpx;
  line-height: 135rpx;
  text-align: center;
  font-size:48rpx;
}

.paybox .price text{
  font-size:60rpx;
}

.pay-btn .btn{
  height: 68rpx;
  text-align: center;
  line-height: 68rpx;
  border-radius: 68rpx;
  color:#fff;
  font-size:36rpx;
  margin-top: 40rpx;
}

.pay-btn .btn-warning{
  background-color: #ff6600;
}

.pay-btn .btn-chat{
  background-color: #8bc24a;
}

.pay-btn .btn-disabled{
  background-color: #bdbdbd;
}

.close{
  position: absolute;
  width: 54rpx;
  height: 54rpx;
  top:-27rpx;
  right: 40rpx;
}

.action-btnbox{
  padding: 0 20rpx;
  display: flex;
  align-content: center;
  align-items: center;
}

.action-btnbox .kefu{
  width: 80rpx;
  height:68rpx;
  border-right:1rpx solid #dedede;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

.action-btnbox .kefu .icon{
  width: 45rpx;
  height: 45rpx;
}

.action-btnbox .kefu text{
  font-size:20rpx;
  color:#666;
}

.action-btnbox .btn{
  margin-left: 20rpx;
  margin-right: 0;
}