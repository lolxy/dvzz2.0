}

.order-wrapper .nav{
  position: fixed;
  height: 88rpx;
  top:0;
  padding: 0 20rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  width: 100%;
  align-content: center;
  align-items: center;
  z-index: 1;
}

.order-wrapper .nav .item{
  display: flex;
  align-content: center;
  align-items: center;
  height: 68rpx;
  padding-top: 20rpx;
}

.order-wrapper .nav .item text{
  font-size: 26rpx;
  color:#666666;
  padding-bottom: 20rpx;
  border-bottom: 5rpx solid #fff;
}

.order-wrapper .nav .item.on text{
  color:#ff6600;
  border-bottom: 5rpx solid #ff6600;
}

