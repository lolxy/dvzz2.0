/* pages/mine/wdqb/info/index.wxss */
view, image, text {
  box-sizing: border-box;
}
image {
  width: 100%;
  height: 100%;
}
.container {
  width: 100%;
  height: 100%;
  position: absolute;
  background-color: #f3f3f3;
}
.header {
  width: 100%;
  height: 440rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.cash_icon {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 48rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #ffd1b2;
}
.cash_title {
  margin-bottom: 48rpx;
  font-size: 24rpx;
  line-height: 1em;
  color: #ff6600;
}
.cash_title span {
  font-size: 40rpx;
  line-height: 1em;
}
.cash_btngrp {
  height: 386rpx;
  padding: 75rpx 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: stretch;
}
.btn {
  height: 68rpx;
  padding: 18rpx;
  border-radius: 34rpx;
  font-size: 30rpx;
  line-height: 1em;
  color: #ff6600;
  text-align: center;
  border-width: 1rpx;
  border-style: solid;
  border-color: #ff6600;
}
.cash_btn_hove{
  background: #ff6600;
  color: #ffffff;
}