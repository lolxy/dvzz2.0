/* pages/mine/wdqb/bill/index.wxss */
view, image, text,scroll-view {
  box-sizing: border-box;
}
image {
  width: 100%;
  height: 100%;
}
.container {
  width: 100%;
  height: 100%;
  position: absolute;
  background-color: #f3f3f3;
}
.list {
  width: 100%;
  padding: 30rpx;
  background-color: #ffffff;
  border-bottom: 2rpx solid #ddd;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.item_name {
  margin-bottom: 20rpx;
  font-size: 30rpx;
  line-height: 1em;
  color: #333333;
}
.item_time {
  font-size: 24rpx;
  line-height: 1em;
  color: #999999;
}
.item_price {
  font-size: 30rpx;
  line-height: 1em;
  color: #ff0000;
}