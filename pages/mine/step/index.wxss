/* pages/mine/step/index.wxss */
view, image, text,form ,input {
  box-sizing: border-box;
}
.container {
  width: 100%;
  height: 100%;
  padding: 240rpx 90rpx;
  position: absolute;
  background-color: #f3f3f3;
}
.container form{
  width: 100%;
  height: 100%;
}
.container .form_cont {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around!important;
  align-items: center;
}
image.logo {
  width: 106rpx!important;
  height: 129rpx!important;
  box-sizing: border-box!important;
}
.form_t {
  margin-top: 50rpx;
  font-size: 28rpx;
  line-height: 1em;
  color: #333333;
  text-align: center;
}
.form_grp + .form_grp {
  margin-top: 24rpx;
}
.form_grp {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between!important;
  align-items: stretch;
}
.form_grp input {
  min-height: 60rpx;
  padding:0 14rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  line-height: 60rpx!important;
  color: #333333;
  vertical-align: middle;
  border: 1rpx solid #999999;
}
.input_a {
  width: 100%;
}
.input_b {
  width: 360rpx;
  flex-basis: 360rpx;
}
.input_b.disabled{
  background-color: #eeeeee;
}
.normal-btn {
  width: 140rpx;
  padding: 10rpx 0;
  font-size: 24rpx;
  line-height: 30rpx;
  color: #ff6600;
  text-align: center;
  border: 1rpx solid #ff6600;
  border-radius: 10rpx;
}
.normal-btn.disabled{
  border: 1rpx solid #666;
  color:#666;
}
.identify {
  width: 140rpx;
  height: 60rpx;
  background-color: #ddd;
}
.form_f {
  width: 100%;
  height: 200rpx;
}
.btn {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0;
  border-radius: 10rpx;
  background-color: #ff6600;
  color: #ffffff;
  text-align: center;
  margin-top: 20rpx;
}
.btn.enable {
  background-color: #ccc!important;
}
