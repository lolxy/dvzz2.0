.comfirm-wrapper{
  padding-bottom: 98rpx;
}

.order-item{
  border-bottom:1rpx solid #dedede;
  background-color: #fff;
}

.order-header,.order-footer{
  margin-bottom: 20rpx;
  background-color: #fff;
}

.order-info .dl{
  background-color: #fff;
  border-bottom: 1rpx solid #dedede;
  display: flex;
  align-content: center;
  align-items: center;
  padding: 20rpx;
}

.order-info .dl:last-child{
  border-bottom: none;
}

.order-info .dl .dt{
  font-size:30rpx;
  color:#333333;
  height: 48rpx;
  line-height: 48rpx;
  font-weight: bolder;
  margin-right: 10rpx;
}

.order-info .dl .dd{
  flex:1;
  font-size: 28rpx;
  color:#666;
}

.order-info .dl .youhuiquan{
  color:#999;
  text-align: right;
}

.order-info .dl .price{
  color:#f54337;
  text-align: right;
}

.order-footer .libox{
  height: 88rpx;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #dedede;
  display: flex;
  justify-content: flex-end;
  align-content: center;
  align-items: center;
  font-size: 30rpx;
  font-weight: bolder;
}

.order-footer .libox:last-child{
  border-bottom:none;
}

.order-footer .libox text{
  color:#f54337;
}

.action-btnbox{
  height: 98rpx;
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  box-shadow: 5rpx 5rpx 5rpx #cccccc;
  display: flex;
  padding: 15rpx 5rpx;
  box-sizing: border-box; 
}

.action-btnbox .btn{
  margin:0 15rpx;
  flex:1;
  height: 68rpx;
  line-height: 65rpx;
  text-align: center;
  letter-spacing: 5rpx;
  font-size: 30rpx;
  color:#ff6600;
  border:1rpx solid #ff6600;
  border-radius: 68rpx;
}

.action-btnbox .btn.btn-warning{
  background-color: #ff6600;
  color:#fff;
}

/* 批量选择商品详情 */
.batch-select{
  background-color: #fff;
  margin-bottom: 20rpx;
}
.batch-select .hd{
  padding-left: 20rpx;
  line-height: 88rpx;
  border-bottom:1rpx solid #dedede;
  font-size:30rpx;
  color:#333;
  font-weight: bold;
}
.batch-select .bfoot{
  height: 88rpx;
  display: flex;
  align-content: center;
  align-items: center;
  color:#ff6600;
  width: 100%;
  line-height: 88rpx;
  font-size: 26rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.batch-select .bfoot image{
  width: 40rpx;
  height: 40rpx;
}

.batch-select .bfoot text{
  margin-left: 10rpx;
}

/* 弹窗样式 */
.actionsheet{
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.5);
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  transition: all cubic-bezier(0.165, 0.84, 0.44, 1) .2s;
}
.paybox{
  margin: 20rpx;
  height: 520rpx;
  border-radius: 20rpx;
  background-color: #fff;
  position: relative;
  padding: 40rpx;
}

.paybox .tip{
  line-height: 90rpx;
  font-size: 30rpx;
  color:#000;
  text-align: center;
}

.paybox .price{
  color:#f54337;
  height: 135rpx;
  line-height: 135rpx;
  text-align: center;
  font-size:48rpx;
}

.paybox .price text{
  font-size:60rpx;
}

.pay-btn .btn{
  height: 68rpx;
  text-align: center;
  line-height: 68rpx;
  border-radius: 68rpx;
  color:#fff;
  font-size:36rpx;
  margin-top: 40rpx;
}

.pay-btn .btn-warning{
  background-color: #ff6600;
}

.pay-btn .btn-chat{
  background-color: #8bc24a;
}

.pay-btn .btn-disabled{
  background-color: #bdbdbd;
}

.close{
  position: absolute;
  width: 54rpx;
  height: 54rpx;
  top:-27rpx;
  right: 40rpx;
}
