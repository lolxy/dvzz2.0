/* pages/order/settlement/index.wxss */
view, image, text {
  box-sizing: border-box;
}
image {
  width: 100%;
  height: 100%;
}
.container {
  width: 100%;
  height: 100%;
  position: absolute;
  background-color: #f3f3f3;
}
.header {
  width: 100%;
  height: 360rpx;
  padding: 0 132rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: stretch;
}
.charge_title {
  margin-bottom: 86rpx;
  font-size: 32rpx;
  line-height: 1em;
  color: #333333;
  text-align: center;
}
.charge_num {
  padding-bottom: 20rpx;
  width: auto!important;
  font-size: 72rpx;
  font-weight: bold;
  color: #333333;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.charge_num input{
  width: auto!important;
  min-width: 3em;
  font-size: 72rpx;
  font-weight: bold;
  text-align: center;
}

.cash_btngrp {
  height: 386rpx;
  padding: 75rpx 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: stretch;
}
.btn {
  height: 68rpx;
  padding: 18rpx;
  border-radius: 34rpx;
  font-size: 30rpx;
  line-height: 1em;
  color: #ff6600;
  text-align: center;
}
.cash_btn_hove{
  background: #ff6600;
  color: #ffffff;
}
