/* pages/self/station/index.wxss */
@import '../../../style/common.wxss';
.stationhead {
  width:100%;
  height: 90rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  background-color: #ffffff;
  border-bottom: 2rpx solid #ddd;
}
.station_head_item view {
  font-size: 28rpx;
  line-height: 30rpx;
  color: #999999;
  display: inline-block;
}
.station_head_item.active view {
  color: #ff6600;
}
.station_head_item image {
  width: 20rpx;
  height: 30rpx;
  margin-left: 10rpx;
  display: inline-block;
  vertical-align: middle;
}
