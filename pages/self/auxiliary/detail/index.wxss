/* pages/self/auxiliary/detail/index.wxss */
@import '../../../../style/common.wxss';
.container {
  height: 100%;
  background-color: #f3f3f3;
  position: absolute;
}
.detailhead {
  margin-bottom: 20rpx;
  background-color: #ffffff;
}
.headpic {
  width: 100%;
  max-height: 750rpx;
}
.headpic image{
  width: 100%;
}
.head_cont {
  width:100%;
  height: 210rpx;
  padding: 15rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: stretch;
}
.head_c_t {
  font-size: 36rpx;
  font-weight: bold;
  line-height: 1em;
  color: #666666; 
}
.head_c_c {
  width:100%;
  height: 24rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.head_c_c > view {
  font-size: 32rpx;
  line-height: 1em;
  color: #666666; 
}
.head_c_c > view span {
  font-size: 30rpx;
  line-height: 1em;
  color: #ff0000; 
}
.detailcont {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #ffffff;
}
.detailcont > view{
  margin-bottom: 24rpx;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 60rpx;
  height: 80rpx;
  color: #666666;
  border-bottom:1rpx solid #eee;
}
.detailcont > text{
  min-height: 72rpx;
  font-size: 28rpx;
  line-height: 30rpx;
  color: #666;
  display: block;
  text-indent: 56rpx!important;
}