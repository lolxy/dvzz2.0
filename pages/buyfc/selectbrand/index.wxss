/* 头部样式 */
.brandlist{
  position: absolute;
  top:0;
  bottom: 118rpx;
  width: 100%;
  overflow: hidden;
}

.theader{
  height: 88rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #d1d1d1;
  display: flex;
}

.tbody{
  position: absolute;
  top:89rpx;
  bottom: 0;
  width: 100%;
}

.theader .th,.tbody .th{
  border-right: 1rpx solid #d1d1d1;
  width: 265rpx;
  display: flex;
  align-content: center;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
}

.theader .th,.theader .td{
  font-size:24rpx;
  color:#333333;
  font-weight: bold;
}

.theader .td{
  display: flex;
  align-content: center;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  flex:1;
}

.tbody .brand-item-box{
  background-color: #fff;
}

.tbody .item{
  display: flex;
  border-bottom: 1rpx solid #d1d1d1;
}

.tbody .th{
  font-size:26rpx;
  color:#666;
}

.tbody .td{
  padding: 20rpx;
  color:#333;
  font-size: 25rpx;
  flex:1;
}

.tbody .td .radio-group{
  display: flex;
  align-content: center;
  align-items: center;
  flex:1;
  flex-wrap: wrap;
}

.tbody .td label{
  margin-left: 10rpx;
  display: flex;
  align-content: center;
  align-items: center;
  height: 100%;
  padding:5rpx 10rpx;
}

.tbody .td label.active{
  color:#ff6600;
}

.tbody .td label radio{
  transform: scale(0.8)
}

.footer{
  height: 98rpx;
  padding: 0 20rpx;
  overflow: hidden;
  background-color: #fff;
  position: absolute;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
  box-shadow: 5rpx 0 10rpx rgba(148,151,154,0.35);
  display: flex;
}

.footer .btn-box{
  flex:1;
  padding: 15rpx;
}

.footer .btn-box .btn{
  width: 100%;
  height: 68rpx;
  line-height: 68rpx;
}

.btn{
  text-align: center;
  line-height: 68rpx;
  font-size: 24rpx;
  letter-spacing: 2rpx;
}

.btn.btn-full{
  border: 1rpx solid #ff6600;
  background-color: #ff6600;
  color:#ffffff;
}

.btn.btn-radius{
  border-radius:68rpx;
}