/* pages/detail/detail.wxss */
@import "../../wxParse/wxParse.wxss";
.containers{
  background-color:#f3f3f3;
  position: absolute;
  bottom: 98rpx;
  top:0;
  width: 100%;
}

.containers.nofixedbottom{
  bottom: 0;
}

/* 详情轮播图模块 */
.swriper-contains{
  width: 100%;
  height: 750rpx;
  overflow: hidden;
}

.swriper-contains swiper,.swriper-contains swiper image{
  height: 750rpx;
}

.customer-top{
  width: 100%;
  background-color: #f8f8f9;
}

.customer-banner,swiper-item,.customer-top .slide-image{
  width: 100%;
}

.detail-base{
  background-color: #fff;
  height: 180rpx;
  padding: 30rpx;
  box-sizing: border-box;
}

.detail-base .d-head{
  height: 50rpx;
  line-height: 50rpx;
  margin-bottom: 10rpx;
  display: flex;
  justify-content: space-between;
}

.detail-base .d-head .title{
  flex:1;
  font-size: 36rpx;
  color:#666;
  font-weight:bolder;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space:nowrap;
  margin-right: 20rpx;
}

.detail-base .d-head .favicon,.detail-base .d-head .favicon image{
  width: 50rpx;
  height: 50rpx;
}

.detail-base .price{
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  justify-content: space-between;
}

.detail-base .price view{
  font-size:26rpx;
  color:#666;
}

.detail-base .price text{
  color:#ff0101;
  font-size: 30rpx;
  font-weight: bold;
}

.detail-base .price text.kc{
  color:#666666;
  font-weight: normal;
}

.detail-base .price text.sup{
  vertical-align: super;
  font-size: 18rpx;
}

.datail-params{
  background-color: #fff;
  display: flex;
  padding: 30rpx;
  box-sizing: border-box;
  flex-wrap: wrap;
}

.datail-params .item{
  width: 50%;
  font-size: 26rpx;
  color:#666;
  line-height: 60rpx;
  text-overflow: ellipsis;
  white-space:nowrap;
  overflow: hidden;
}

.evaluate{
  background-color: #fff;
}

.evaluate .ev-header{
  border-bottom: 1rpx solid #dedede;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  justify-content: space-between;
  color: #666;
  font-size:24rpx;
  padding: 0 20rpx 0 30rpx;
}

.evaluate .ev-header text{
  font-size: 26rpx;
}

.ev-info{
  display: flex;
  padding: 20rpx;
}

.ev-info image{
  border-radius: 80rpx;
  width: 80rpx;
  height: 80rpx;
  margin: 0 20rpx;
}

.ev-info .content{
  flex:1;
  color:#666;
  font-size: 20rpx;
}

.c-head{
line-height: 50rpx;
display: flex;
justify-content: space-between;
}

.c-head .phone{
color:#333;
font-size: 26rpx;
font-weight: bold;
}

.c-info{
line-height: 40rpx;
}

.detail-info{
  background-color: #fff;
  height: 100%;
  overflow: hidden;
}

.tabs .tab-nav{
  display: flex;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1rpx solid #eeeeee;
}

.tabs .tab-nav view{
  flex:1;
  font-size: 26rpx;
  color:#666;
  align-items: center;
  justify-content: center;
  align-content: center;
  display: flex;
  height: 100%；
}

.tabs .tab-nav view text{
  height: 60rpx;
  line-height: 50rpx;
  display: block;
  text-align: center;
}

.tabs .tab-nav view.on text{
  color:#ff6600;
  border-bottom: 5rpx solid #ff6600
}

.swiper-wrap{
  width: 100%;
  height: calc(100% - 88rpx);
}

.swiper-wrap .tab-content{
  width: 100%;
  height: 100%;
}

.tab-content image{
  width: 100% !important; 
  vertical-align: top;
}

.tab-content .nodata{
  line-height: 80rpx;
  padding: 20rpx;
  font-size: 24rpx;
  color:#999999;
  text-align: center;
}

.bth-add,.bth-select-mat{
  position: absolute;
  bottom: 0;
  height: 98rpx;
  width: 100%;
  padding: 15rpx 20rpx;
  box-sizing: border-box;
  background-color:#fff;
}

.bth-select-mat{
  display: flex;
}

.bth-select-mat .kefu{
  width: 80rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  height: 70rpx;
  padding-left: 10rpx;
  position: relative;
}

.bth-select-mat .kefu:after{
  content:"";
  display: block;
  width: 1px;
  height: 50rpx;
  background-color: #dedede;
  position: absolute;
  right: 0;
  top:10rpx;
}

.bth-select-mat .kefu image{
  width: 45rpx;
  height: 45rpx;
  vertical-align: top;
}

.bth-select-mat .kefu text{
  font-size: 20rpx;
  color:#666;
  font-weight: bold;
}

.actionBtn{
  flex:1;
  display: flex;
}

.actionBtn .yuyue,.actionBtn .buybox{
  margin-left:20rpx;
}

.actionBtn .buybox{
  display: flex;
  flex:1;
}

.actionBtn .buybox .btn{
  flex:1;
}

.actionBtn .btn{
  height: 68rpx;
  overflow: hidden;
  font-size:28rpx;
  font-weight: 500;
  text-align: center;
  line-height: 68rpx;
  color:#fff;
}

.btn-primary{
  background-color: #03a9f5;
  border-radius:68rpx;
  width: 190rpx;
}

.btn-warning{
  background-color: #fea000;
  border-radius: 68rpx 0 0 68rpx;
}

.btn-danger{
  background-color: #ff6600;
  border-radius: 0rpx 68rpx 68rpx 0;
}

.bth-add .btn{
  height: 68rpx;
  border-radius:68rpx;
  overflow: hidden;
  background-color: #ff6600;
  font-size:32rpx;
  font-weight: 500;
  text-align: center;
  line-height: 68rpx;
  color:#fff;
}

.bth-add .btn{
  width: 100%;
}

/* 弹窗样式 */
.actionsheet{
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.5);
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  transition: all cubic-bezier(0.165, 0.84, 0.44, 1) .2s;
}
.buySelectAttr{
  margin: 20rpx;
  height: 360rpx;
  border-radius: 20rpx;
  background-color: #fff;
}

.buySelectAttr .header{
  height: 258rpx;
  border-bottom: 1rpx solid #dedede;
  position: relative;
  padding: 40rpx;
  padding-top:20rpx; 
}

.buySelectAttr .header .mainimgbox{
  border-radius: 20rpx;
  width: 260rpx;
  height: 260rpx;
  border:1rpx solid #ff6600;
  position: absolute;
  top:-40rpx;
  overflow: hidden;
}

.buySelectAttr .header .mainimg{
  width: 260rpx;
  height: 260rpx;
  vertical-align: top;
}

.buySelectAttr .header .close{
  width: 54rpx;
  height: 54rpx;
  position: absolute;
  top:-27rpx;
  right: 40rpx;
  overflow: hidden;
}

.buySelectAttr .t-box{
  margin-left: 300rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.buySelectAttr .t-box .price{
  font-weight: 500;
  font-size:36rpx;
  color:#f54337;
}

.buySelectAttr .t-box .kucun{
  font-size:28rpx;
  color:#666;
}

.buySelectAttr .footer{
  height: 100rpx;
  padding: 0rpx 40rpx;
  box-sizing: border-box;
  display: flex;
  align-content: center;
  align-items: center;
}

.buySelectAttr .footer .btn{
  width: 100%;
  height: 70rpx;
  border-radius: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 36rpx;
  letter-spacing: 20rpx;
  color:#fff;
  background-color: #ff6600;
}

.addplus{
  display: flex;
  width: 242rpx;
  height: 80rpx;
  border: 1rpx solid #d1d1d1;
  border-radius: 10rpx;
  align-self: flex-end;
}

.addplus .plus,.addplus .reduce{
  width: 80rpx;
  height: 80rpx;
  text-align: center;
  padding: 9rpx;
  box-sizing: border-box;
}

.addplus .input{
  border-left:1rpx solid #d1d1d1;
  border-right:1rpx solid #d1d1d1;
  text-align: center;
  padding: 0 10rpx;
  flex:1;
}

.addplus .input input{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  color:#666;
  width: 100%;
}