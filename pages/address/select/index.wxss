.select-address-wrap{
  padding-top: 98rpx;
}
.selectHead {
  width:100%;
  height: 88rpx;
  padding: 15rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  top:0rpx;
  z-index: 1;
  background-color: #ff6600;
}
.local {
  line-height: 30rpx;
  display: flex;
}
.local .localicon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
  vertical-align: top;
}
.down-icon{
  width: 30rpx;
  height: 30rpx;
  margin-left: 20rpx;
  vertical-align: top;
}
.local picker {
  display: inline-block;
}
.local .picker {
  font-size: 24rpx;
  line-height: 30rpx;
  color: #ffffff;
}

.search-box{
  background-color: #fff;
  border-radius: 58rpx;
  overflow: hidden;
  flex:1;
  margin-left: 20rpx;
  height: 100%;
  display: flex;
  padding: 0 20rpx 0 10rpx;
  box-sizing: border-box;
  justify-content: space-between;
}

.search-box image{
  width: 40rpx;
  height: 40rpx;
  margin: 9rpx;
}

.search-box input{
  flex:1;
  color:#999;
  font-size: 24rpx;
  line-height: 58rpx;
  height: 58rpx;
}

.address-list{
  padding: 0 20rpx;
}

.address-list .item{
  border-bottom:1rpx solid #dedede;
  font-size: 30rpx;
  color:#333;
  font-weight: 600;
  height: 88rpx;
  line-height: 88rpx;
}